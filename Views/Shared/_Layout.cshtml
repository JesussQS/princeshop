<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - princeshop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
     <link rel="stylesheet" href="~/css/img.css" asp-append-version="true" />
     <link rel="stylesheet" href="~/css/nav.css" asp-append-version="true" />
     <link rel="stylesheet" href="~/css/inise.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/princeshop.styles.css" asp-append-version="true" />
     <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.8/css/solid.css">
    <script src="https://use.fontawesome.com/releases/v5.0.7/js/all.js"></script>   
    <script src="https://cdn.lordicon.com/qjzruarw.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid buscol">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img class="img-responsive" width="70" height="70"
                       src="/images/logo.png"/></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item bus">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Mundo de Princesas</a>
                        </li>
                        <li class="nav-item bus">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Nosotros">Nosotros</a>
                        </li>
                        <li class="nav-item bus">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Contacto" asp-action="Index">Contacto</a>
                        </li>
                        <li class="nav-item dropdown bus">
                          <a class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown">Catalogo</a>
                            <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-controller="Catalogo" asp-action="Index" asp-route-searchString="Invierno">Temporada Invierno</a></li>
                            <li><a class="dropdown-item" asp-controller="Catalogo" asp-action="Index" asp-route-searchString="Verano">Temporada Verano</a></li>
                            </ul>
                        </li>
                        <partial name="_MenuPartial" />
                        <li class="nav-item bus">
                            <form class="d-flex" asp-controller="Catalogo" asp-action="Index">
                               <input class="form-control me-2" type="text" name="searchString" placeholder="Buscar producto">
                               <button class="btn btn-outline-primary" type="submit">Buscar</button>
                            </form>
                        </li>     
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div> 
    <div style="clear:left ;">
      <br>
        <br>
        <br>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Princeshop - <a asp-area="" asp-controller="#" asp-action="#">Privacy</a>
        </div>
    </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
