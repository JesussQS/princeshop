@model princeshop.Models.Contacto

@{
    ViewData["Title"] = "Contacto";
    if(@ViewData["Message"]!=null){
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js"></script>
    <script>alert("@ViewData["Message"]"); window.location.href='/';</script>
    }
}
<br><br><br>
<div class="row text-left">
    <div class="col-4">
        <section class="modal-content">
        <h3 class="display-4">Contactenos</h3>
        <form asp-controller="Contacto" asp-action="Create">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" style="width:350px ;" />
            <br>
            <label asp-for="Email" class="control-label"></label>
            <input asp-for="Email" class="form-control" style="width:350px ;" />
            <br>
            <label asp-for="Subject" class="control-label"></label>
            <input asp-for="Subject" class="form-control" style="width:350px ;" />
            <br>
            <label asp-for="Comment" class="control-label"></label>
            <input asp-for="Comment" class="form-control" style="width:350px; height:100px;" />
            <br>
            <div class="form-group">
                <button type="submit" class="btn btn-primary" style="width: 100px;">Enviar</button>
            </div>
        </form>
        <br>
        </section>
    </div>
</div>