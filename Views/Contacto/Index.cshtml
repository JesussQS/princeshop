@model princeshop.Models.Contacto

@{
    ViewData["Title"] = "Contacto";
}
<h1>@ViewData["Title"]</h1>

<div class="text-center">
    <h1 class="display-4">Contactenos</h1>

    <form asp-controller="Contacto" asp-action="Create">
        <div class="row-fluit">
            <div class="row"> <div class="col-6"><label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control form-control-sm" type="text" placeholder="Escribe un nombre"
                    aria-label=".form-control-sm" /></div>
            <div class="col-6"><label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" /></div>
                
            </div>
        
            <div class="row"><label asp-for="Subject" class="control-label"></label>
                <input asp-for="Subject" class="form-control" />
            </div>
            <div class="row"> <label asp-for="Comment" class="control-label"></label>
                <input asp-for="Comment" class="form-control" />
            </div>
        </div>








        <div class="form-group">
            <button type="submit" class="btn btn-primary">Enviar</button>
        </div>
    </form>
    <h1>@ViewData["Message"]</h1>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>