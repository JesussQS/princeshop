@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<br><br>

<body class="userbody">


    <div class="row col-12" class="modal-dialog text-center">
        <div class="col-4"></div>
        <div class="col-md-4" class="col-sm-8 main-section">
            <section class="modal-content">
                <form id="account" method="post" class="col-12">

                    <div class="col-12 user-img">
                        <img src="/images/logo.png" alt="">
                    </div>

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating" class="form-group" id="user-group">

                        <input type="text" class="form-control" placeholder="nombre de usuario" asp-for="Input.Email"
                            class="form-control" autocomplete="username" aria-required="true" />
                        <label asp-for="Input.Email" class="form-label"></label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating " class="form-group" id="contraseña-group">
                        <div id="contraseña-group"></div>
                        <input id="contraseña-group" type="text" class="form-control" placeholder="contraseña"
                            asp-for="Input.Password" class="form-control" autocomplete="current-password"
                            aria-required="true" />
                        <label asp-for="Input.Password" class="form-label"></label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>


                    <div>
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe" class="form-label">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>


                    <div>
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary userbutton"><i
                                class="fas fa-sign-in-alt"></i>Log in</button>
                    </div>




                    <div>
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                        </p>
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                        </p>
                        <p>
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email
                                confirmation</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>
         <div class="col-4"></div>


    </div>

    <div class="row">


        <div class="col-3 redes"><a href="https://www.whatsapp.com/?lang=es"><img src="/images/whasap.png" width="100"
                    height="100
                " alt=""></a>

        </div>

        <div class="col-3 redes"><a href="https://www.facebook.com/"><img src="/images/face.png" width="100" height="100
                " alt=""></a></div>





        <div class="col-3 redes"><a href="https://www.instagram.com/"><img src="/images/insta.png" width="100" height="100
                " alt=""></a>

        </div>

        <div class="col-3 redes"><a href="https://www.tiktok.com/es/"><img src="/images/tik.png" width="100" height="100
                " alt=""></a></div>



    </div>
</body>
