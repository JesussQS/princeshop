@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<br>
<br>
<body class="userbody">
<div class="row col-12" class="modal-dialog text-center">
    <div class="col-4"></div>
    <div class="col-md-4" class="col-sm-8 main-section">
     <section class="modal-content">   
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="col-12">
            <div class="col-12 user-img">
                        <img src="/images/logo.png" alt="">
            </div>
            <h2>Registrar nuevo Cliente.</h2>
            <br>
            Bienvenido a princeshop
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <br>
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <br>
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            
        <br>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Registrar</button>
        </form>
        <br>
        </section> 
    </div>
</div>
</body>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
